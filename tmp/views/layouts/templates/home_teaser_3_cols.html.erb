</head>
<body id="home" class="home-page">
	<%= cms_toolbar %>
	<div id="branding-background">			
		<div id="branding-container">
			<div id="header">
				<h1>Smile-Effect</h1>
				<%= render_menu %>
			</div>
			<div id="teaser">
				<div id="teaserleft">
					<a href="/marketing"><%= image_tag "ambients/intro.marketing.png", :class => "img_left" %></a>
				</div>
				<div id="teasercenter">		
					<a href="/web"><%= image_tag "ambients/intro.web.png", :class => "img_center" %></a>
				</div>
				<div id="teaserright">		
					<a href="/design"><%= image_tag "ambients/intro.design.png", :class => "img_right" %></a>
				</div>
			</div>
			<div id="content">
				<div id="contentleft" class="theme_marketing">
					<%= container :contentleft %>
				</div>
				<div id="contentcenter" class="theme_web">		
					<%= container :contentcenter %>
				</div>
				<div id="contentright" class="theme_design">		
					<%= container :contentright %>
				</div>
			</div>
		</div>
		<div id="footer-background">
<%= image_tag "backgrounds/bg.rainbow.jpg", :class => "img_footer" %>
			<div id="footer-container">
				<div id="footer">
					<div id="footercontentleft">
						<%= container :footercontentleft %>
					</div>
					<div id="footercontentcenter">		
						<%= container :footercontentcenter %>
<%= image_tag "backgrounds/bg.spacer.png", :class => "img_spacer" %>
					</div>
					<div id="footercontentright">		
						<%= container :footercontentright %>
<%= image_tag "backgrounds/bg.spacer.png", :class => "img_spacer" %>
					</div>	
				</div>
			</div>		</div>
		</div>

	</body>
	</html>